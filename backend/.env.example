# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:8000

# Database (quando implementar)
# DATABASE_URL=postgresql://user:password@localhost:5432/sway
# ou
# MONGODB_URI=mongodb://localhost:27017/sway

# JWT Secret (para autenticação futura)
# JWT_SECRET=your-secret-key-here

# WhatsApp API (futuro)
# WHATSAPP_API_KEY=your-whatsapp-api-key
# WHATSAPP_API_SECRET=your-whatsapp-api-secret

# Email (futuro)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password

# Firebase (opcional)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email
